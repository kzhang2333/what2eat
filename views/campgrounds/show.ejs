<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p  class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<h4 class="pull-right">$9,900/night</h4>
					<h4><%=campground.name%></h4>
					<p><%= campground.description %></p>
					<p>
						<i>Created by <%= campground.author.username %></i>
					</p>
					<% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
					<a class="btn btn-warning btn-xs" href="/campgrounds/<%= campground.id %>/edit">Edit</a>
					<form id="delete-form" action="/campgrounds/<%= campground.id %>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">Delete</button>
					</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
				</div>
				<hr>
				<div class="row">
					<% campground.comments.forEach (function(comment) { %>
					<div class="col-md-12 well">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 dyas ago</span>
						<p><%= comment.text %></p>
					</div>
					<% }) %>
				</div>
			</div>
		</div>
	</div>
</div>






	 
<%- include("../partials/footer") %>
	 