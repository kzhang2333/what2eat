<%- include("../partials/header") %>

<div class="row">
	<h1 style="text-align: center">Edit <%= recipe.name %> </h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/recipes/<%= recipe._id %>/?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" value="<%= recipe.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" value="<%= recipe.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" value="<%= recipe.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-default btn-block">submit</button>
			</div>
		</form>
		<a href="/recipes/<%=recipe.id%>">Go back</a>
	</div>


</div>


<%- include("../partials/footer") %>